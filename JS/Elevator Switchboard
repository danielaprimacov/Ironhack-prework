let floor;
const department = "shoes"; // "clothes", "electronics", "gardening"

// Your Code:
// check if the value of department is "shoes" or "clothes"
if (department === "shoes" || department === "clothes") {
  floor = "1st Floor";
} else if (department === "electronics") { // check if the value is electronics
  floor = "2nd Floor";
} else if (department === "gardening") { // check if the value is gardening
  floor = "3rd Floor";
} else {
  floor = "Ground Floor";
}

// Check your code:
console.log(`Going to the ${department} department - ${floor}.`)
